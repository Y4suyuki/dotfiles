{
  "name": "typescript",
  "languageId": "typescript",
  "command": [
    "typescript-language-server",
    "--stdio"
  ],
  "settings": {
    "typescript": {
      "format": {
        "convertTabsToSpaces": true,
        "indentSize": 4,
        "tabSize": 4,
        "semicolons": "insert"
      }
    }
  },
  "initializationOptions": {
    "preferences": {
	  "includeCompletionsForModuleExports": false
	}
  }
}
